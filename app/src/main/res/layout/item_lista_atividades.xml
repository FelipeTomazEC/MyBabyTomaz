<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icone_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icons8_amamentacao_48" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/rotulo_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo Atividade" />

        <TextView
            android:id="@+id/data_item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28 may 2018" />

        <TextView
            android:id="@+id/tv_item_anotacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bl치 bl치 bl치 bl치" />

    </LinearLayout>


</LinearLayout>